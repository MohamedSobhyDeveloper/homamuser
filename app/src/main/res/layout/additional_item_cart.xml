<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_compo"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_order"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="25dp"
        android:text="Compo"
        android:textSize="17sp"
        android:fontFamily="@font/robotoregular"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="32dp"
        tools:ignore="UnknownId" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_price_compo"
        app:layout_constraintTop_toTopOf="@+id/txt_compo"
        app:layout_constraintBottom_toBottomOf="@+id/txt_compo"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="75.00 X1"
        android:textSize="15sp"
        android:fontFamily="@font/robotoregular"
        android:textColor="@color/eyecolor"
        android:layout_marginEnd="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>