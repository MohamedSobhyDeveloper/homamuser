<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_country"
        android:layout_width="99dp"
        android:layout_height="100dp"
        android:background="@drawable/button_corner_country"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_country"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Italia"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:fontFamily="@font/josefinsansbold"
            />





    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        app:layout_constraintTop_toTopOf="@+id/con_country"
        app:layout_constraintBottom_toBottomOf="@+id/con_country"
        app:layout_constraintStart_toEndOf="@+id/con_country"
        android:layout_width="5dp"
        android:visibility="visible"
        android:layout_height="match_parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>