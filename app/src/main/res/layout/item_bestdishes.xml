<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:elevation="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/drwable_corner_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/food"
            android:id="@+id/img_food"
            android:layout_width="90dp"
            android:layout_height="70dp"/>


        <LinearLayout
            app:layout_constraintStart_toEndOf="@+id/img_food"
            app:layout_constraintTop_toTopOf="@+id/img_food"
            app:layout_constraintBottom_toBottomOf="@id/img_food"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Big zak"
                android:id="@+id/big_zak"
                android:textSize="15sp"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"/>

            <TextView
                android:text="he break the record"
                android:id="@+id/ispum"
                android:textSize="15sp"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"/>

            <TextView
                android:text="12 L.E"
                android:id="@+id/price"
                android:textSize="15sp"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/orangefateh"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"/>

        </LinearLayout>



        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/add"
            android:background="@drawable/rectangleplus"
            android:layout_width="25dp"
            android:layout_height="25dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>