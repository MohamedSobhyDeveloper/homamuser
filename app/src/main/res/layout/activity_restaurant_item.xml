<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".view.MainActivity"
        >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.22"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.11"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            tools:ignore="UnusedAttribute,UseCompoundDrawables">

            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/back"
                android:padding="20dp"
                android:layout_gravity="center"
                android:id="@+id/backbtn"
                android:rotation="@string/rotate"
                tools:ignore="ContentDescription" />


            <LinearLayout
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal"
                android:layout_marginEnd="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share"
                    android:layout_gravity="center"
                    android:id="@+id/img_share"
                    android:rotation="@string/rotate"
                    tools:ignore="ContentDescription" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/save"
                    android:id="@+id/img_save"
                    android:visibility="gone"
                    android:rotation="@string/rotate"
                    tools:ignore="ContentDescription" />


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/top_layout"
            android:background="@drawable/backgrounlogin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:context=".view.login.LoginActivity">



        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:src="@drawable/pastachips"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline_two"
            app:layout_constraintBottom_toTopOf="@+id/register_layout"
            android:layout_width="190dp"
            android:elevation="20dp"
            android:layout_height="130dp"
            tools:ignore="ContentDescription" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_layout"
            android:background="@drawable/buttonwhiterectangle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline_two"
            android:elevation="15sp"
            tools:context=".view.login.LoginActivity">



            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="BIG ZAK"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:id="@+id/food_name"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/robotobold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
            <TextView
                app:layout_constraintTop_toBottomOf="@+id/food_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting"
                android:textColor="@color/eyecolor"
                android:textSize="16sp"
                android:id="@+id/description"
                android:textAlignment="center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/robotoregular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />


            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toBottomOf="@+id/description"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="35dp"
                android:background="@drawable/recsalary"
                android:id="@+id/con_num_and_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="120 L.E"
                    android:id="@+id/txt_price"
                    android:textColor="@color/orangefateh"
                    android:textSize="14sp"
                    android:fontFamily="@font/robotobold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txt_price"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="15dp"
                    android:padding="10dp"
                    android:background="@drawable/backgmenu"
                    android:layout_width="130dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="-"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:padding="10dp"
                        android:gravity="center"
                        android:id="@+id/minues"
                        android:fontFamily="@font/robotoregular"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:text="0"
                        android:textColor="@color/orangefateh"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:id="@+id/quantity"
                        android:background="@drawable/rounddrawablewhiteoval"
                        android:fontFamily="@font/robotobold"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:text="+"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:fontFamily="@font/robotoregular"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/add"
                        android:layout_height="match_parent"
                        tools:ignore="HardcodedText" />


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_layout"
            android:layout_width="match_parent"
            android:id="@+id/con"
            android:layout_height="wrap_content">

            <TextView
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp"
                android:textSize="16sp"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/black"
                android:id="@+id/txt_size"
                android:text="@string/choose_the_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                app:layout_constraintTop_toBottomOf="@+id/txt_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/roundbutoncornergray"
                android:id="@+id/recycler_size"
                android:padding="20dp"
                tools:listitem="@layout/item_size"
                android:visibility="visible"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@+id/recycler_size"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/black"
                android:id="@+id/txt_addation"
                android:text="@string/additions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                app:layout_constraintTop_toBottomOf="@+id/txt_addation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/roundbutoncornergray"
                android:id="@+id/recycler_addition"
                android:padding="20dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginTop="20dp"
                tools:listitem="@layout/item_addition"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@+id/recycler_addition"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/black"
                android:id="@+id/txt_comment"
                android:text="@string/special_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                app:layout_constraintTop_toBottomOf="@+id/txt_comment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/lin_msg"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/roundbutoncornergray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <EditText
                    android:id="@+id/edit_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubikregular"
                    android:paddingTop="20dp"
                    android:paddingBottom="80dp"
                    android:hint="@string/example_please_don_t_add_onions"
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:background="@drawable/backwithborder"
                    android:paddingLeft="5dp"
                    android:outlineSpotShadowColor="@color/white"
                    android:textColor="@color/eyecolor"
                    android:textColorHint="@color/eyecolor"
                    android:textSize="12sp"
                    tools:ignore="Autofill,RtlSymmetry" />


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.appcompat.widget.AppCompatButton
            app:layout_constraintTop_toBottomOf="@+id/con"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:text="@string/add_to_cart"
            android:textSize="14sp"
            android:id="@+id/add_to_cart"
            android:background="@drawable/backgaddtocart"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/robotobold"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>